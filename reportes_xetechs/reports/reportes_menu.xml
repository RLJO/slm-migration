<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="action_reportes_xetechs_invoice_pdf"
        model="account.invoice"
        string="Invoices"
        report_type="qweb-pdf"
        name="reportes_xetechs.reportes_xetechs_invoice_pdf"
        file="reportes_xetechs.reportes_xetechs_invoice_pdf"
        attachment="(object.state in ('open','in_payment','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
        print_report_name="(object._get_report_base_filename())"
    />
        <record id="action_reportes_xetechs_invoice_pdf_repot" model="report.paperformat">
        <field name="name">Invoice</field>
        <field name="default" eval="True"/>
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">25</field>
        <field name="margin_bottom">45</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
       
    </record>
</odoo>
