<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="paperformat_layoutprofitlosse" model="report.paperformat">
          <field name="name">Horizontal-Oficio</field>
          <field name="default" eval="True"/>
          <field name="format">custom</field>
          <field name="page_height">280</field>
          <field name="page_width">216</field>
          <field name="orientation">Landscape</field>
          <field name="margin_top">20</field>
          <field name="margin_bottom">20</field>
          <field name="margin_left">7</field>
          <field name="margin_right">7</field>
          <field name="header_line" eval="False" />
          <field name="header_spacing">15</field>
          <field name="dpi">90</field>
      </record>

      <report
          id="action_layoutprofitloss"
          model="account.layoutprofitloss.report"
          string="Report Layout Profit and Loss"
          report_type="qweb-pdf"
          name="slm_report_lpl.report_layoutprofitloss"
          file="slm_report_lpl.report_layoutprofitloss"
          paperformat="slm_report_lpl.paperformat_layoutprofitlosse"/>
          
      <report
		  id="action_layoutprofitloss_xls"
		  model="account.layoutprofitloss.report"
		  string="Report Layout Profit and Loss"
		  report_type="xlsx"
		  name="slm_report_lpl.report_layoutprofitloss.xlsx"
		  file="slm_report_lpl.report_layoutprofitloss.xlsx"
		  attachment_use="False"/>
		  
      <report
          id="action_balancesheet"
          model="account.balancesheet.report"
          string="Report Layout Balance sheet"
          report_type="qweb-pdf"
          name="slm_report_lpl.report_balancesheet"
          file="slm_report_lpl.report_balancesheet"
          paperformat="slm_report_lpl.paperformat_layoutprofitlosse"/>
          
      <report
		  id="action_balancesheet_xls"
		  model="account.balancesheet.report"
		  string="Report Layout Balance sheet"
		  report_type="xlsx"
		  name="slm_report_lpl.report_balancesheet.xlsx"
		  file="slm_report_lpl.report_balancesheet.xlsx"
		  attachment_use="False"/>		            

    </data>
</odoo>